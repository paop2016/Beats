<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_item_position_drawerLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="100"
        android:textSize="18sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/bg_gray" />

    <TextView
        android:id="@+id/tv_item_count_drawerLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="2333"
        android:textSize="18sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/bg_gray" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <TextView 
            android:id="@+id/tv_item_number_drawerLayout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="0"
            android:textSize="16sp"
            android:textColor="#E08283"
            android:layout_centerInParent="true"
            />
        <ImageView 
            android:id="@+id/iv_item_add_drawerLayout"
            android:src="@drawable/add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_item_number_drawerLayout"
            />
        <ImageView 
            android:id="@+id/iv_item_unadd_drawerLayout"
            android:src="@drawable/unadd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_item_number_drawerLayout"
            />
	</RelativeLayout>
</LinearLayout>
