<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/viewId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffD64541" />

    <include
        android:id="@+id/title_id"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/viewId"
        layout="@layout/titlebar_layout" />

    <RelativeLayout
        android:id="@+id/rl_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_id"
        android:background="@color/bg_gray" >

        <TextView
            android:id="@+id/tv_menuleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="用户"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_menucenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="姓名"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_menuright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:text="地点总数"
            android:textSize="16sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_menu"
        android:background="@color/bg_white"
        android:dividerHeight="1dp"
        android:listSelector="@color/bg_transparent" >
    </ListView>

</RelativeLayout>
