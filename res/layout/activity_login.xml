<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login1">

    <ImageView
        android:id="@+id/iv_logoBody"
        android:background="#00000000"
        android:layout_width="88dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logobody" />
    <ImageView
        
        android:layout_marginTop="-120dp"
        android:layout_below="@id/iv_logoBody"
        android:layout_width="220dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/logobase" />
	<Spinner 
	    android:id="@+id/spinnerId"
	    android:layout_width="180dp"
	    android:layout_height="40dp"
	    android:background="@color/bg_tran_white"
	    android:layout_centerHorizontal="true"
		android:layout_marginBottom="140dp"	
		android:layout_alignParentBottom="true"    
	    />
	<ImageView
	    android:id="@+id/iv_go"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:src="@drawable/go"
	    android:layout_toRightOf="@id/spinnerId"
	    android:layout_alignTop="@id/spinnerId"
	    android:layout_marginLeft="16dp"
	    />
	<ImageView
	    android:background="@color/bg_tran_white"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:padding="8px"
	    android:id="@+id/iv_line"
	    android:src="@drawable/line"
	    />
	
</RelativeLayout>